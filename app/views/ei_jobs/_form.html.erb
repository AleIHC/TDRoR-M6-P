<%= form_with(model: ei_job, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :Posición %>
    <%= form.text_field :position, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :Descripción %>
    <%= form.text_area :job_description, class: "form-control", rows: 4 %>
  </div>

  <div class="form-group">
    <%= form.label :Salario %>
    <%= form.number_field :salary, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :Fecha_tope %>
    <%= form.date_field :deadline, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Postear", class: "btn btn-dark" %>
    <%= link_to "Cancelar", ei_jobs_path, class:"btn btn-dark" %>
  </div>

<% end %>
